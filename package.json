    "awesome-typescript-loader": "^3.0.3",
    "babel-plugin-react-relay": "^0.10.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "babel-relay-plugin": "https://github.com/alloy/relay/releases/download/v0.9.3/babel-relay-plugin-0.9.3.tgz",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "graphql-config-parser": "^1.2.1",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-express": "^0.3.5",
    "gulp-stylus": "^2.6.0",
    "gulp-tslint": "^7.1.0",
    "gulp-typescript": "^3.1.5",
    "gulp-watch": "^4.3.11",
    "jest": "^18.1.0",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.4.2",
    "relay2ts": "^0.2.0",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.5.0",
    "ts-jest": "^18.0.3",
    "ts-loader": "^2.0.0",
    "tslint": "^4.4.2",
    "tslint-loader": "^3.4.2",
    "typescript": "^2.1.5",
    "webpack": "^2.2.1",
    "webpack-config": "^7.0.0",
    "webpack-dev-server": "^2.3.0",
    "webpack-stream": "^3.2.0"
  },
  "dependencies": {
    "artsy-elan": "^1.0.1",
    "react": "^15.4.2",
    "react-relay": "https://github.com/alloy/relay/releases/download/v0.9.3/react-relay-0.9.3.tgz",
    "styled-components": "^1.4.3"
  },
  "graphql": {
    "file": "data/schema.json",
    "tsInterfaceName": "RelayProps"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
